<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="2.5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="2.5dp"
    android:background="@drawable/shape_solid_ffffff_corners_5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="10dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">
        <ImageView
            android:id="@+id/attention_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter" />

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/recommend_video_play_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp" />
    </RelativeLayout>


        <TextView
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_doodle_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你的关注"
            android:textColor="#226B4D"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/recommend_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#222222"
        android:textSize="16sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical">



            <TextView
                android:layout_marginRight="80dp"
                android:text="4546545"
                android:id="@+id/recommend_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#939393"
                android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/laud_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">

            <TextView
                android:textColor="@color/white"
                android:text="ZR"
                android:gravity="center"
                android:background="@drawable/circle_with_text"
                android:textSize="7sp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="2dp" />

            <TextView
                android:id="@+id/recommend_laud_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:text="1.0"
                android:textColor="#939393"
                android:textSize="12sp" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>