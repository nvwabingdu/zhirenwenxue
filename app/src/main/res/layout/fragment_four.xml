<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <View
        android:background="@color/ac_splash_bg_color"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.example.zrwenxue.moudel.main.pagefour.TriangleButton
            android:id="@+id/t1"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            app:buttonColor="#FF0000"
            app:isDownTriangle="true" />

        <com.example.zrwenxue.moudel.main.pagefour.TriangleButton
            android:id="@+id/t2"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            app:buttonColor="#00FF00" />

        <com.example.zrwenxue.moudel.main.pagefour.TriangleButton
            android:id="@+id/t3"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            app:isDownTriangle="true"
            app:buttonColor="#0000FF" />

        <com.example.zrwenxue.moudel.main.pagefour.TriangleButton
            android:id="@+id/t4"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            app:buttonColor="#FFFF00"
            />

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" />

</LinearLayout>