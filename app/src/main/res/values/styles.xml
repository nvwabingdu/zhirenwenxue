    <style name="TUIBaseLightTheme" parent="@style/TUIBaseTheme">

        <!-- 颜色规范 end -->

    </style>

    <style name="TUIBaseLivelyTheme" parent="@style/TUIBaseTheme">
        <!-- 颜色规范 start -->

