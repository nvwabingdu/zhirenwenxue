<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" /> <!-- 开机广播需要的权限 -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application>
        <service
            android:name="com.example.zrlearn.a_android.fourcomponents.services.MyIntentService"
            android:exported="false"></service>

        <activity
            android:name="com.example.zrlearn.a_android.fourcomponents.services.TestServiceActivity"
            android:exported="false" />

        <service
            android:name="com.example.zrlearn.a_android.fourcomponents.services.MyService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name="com.example.zrlearn.a_android.fourcomponents.broadcastreceiver.custom.TestBroadReceiverActivity"
            android:exported="false" />

        <receiver
            android:name="com.example.zrlearn.a_android.fourcomponents.broadcastreceiver.custom.MyBroadcastReceiver"
            android:enabled="true"
            android:exported="true">

            <!-- 加入优先级 有序广播需要  标准广播不需要 -->
            <intent-filter android:priority="100">

                <!-- 标准广播 标签 -->
                <action android:name="com.example.zrtool.learn.and.broadcastreceiver.custom.MY_BROADCASTRECEIVER" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.example.zrlearn.a_android.fourcomponents.broadcastreceiver.sys.MyReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>

                <!-- 系统广播 标签 -->
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver> <!-- android:name=".XArchApplication" -->
        <!-- android:allowBackup="false" -->
        <!-- android:icon="@mipmap/ic_launcher" -->
        <!-- android:label="@string/app_name" -->
        <!-- android:largeHeap="false" -->
        <!-- android:networkSecurityConfig="${networkSecurityConfig}" -->
        <!-- android:roundIcon="@mipmap/ic_launcher_round" -->
        <!-- android:supportsRtl="true" -->
        <!-- android:theme="@style/Theme.XArch" -->
        <!-- tools:replace="android:allowBackup,android:networkSecurityConfig,android:supportsRtl" -->
        <!-- tools:targetApi="n"> -->
        <activity
            android:name=".module.main.ZrMainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityTheme" />
        <activity
            android:name=".module.about.AboutActivity"
            android:launchMode="singleInstancePerTask"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityTheme" />
    </application>

</manifest>