<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/banner_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/diy_page_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:background="@drawable/home_cancel" />

        <ImageView
            android:id="@+id/diy_page_confirm"
            android:layout_width="56dp"
            android:layout_height="27dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/diy_banner_page_confirm" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="236" />

        <cn.dreamfruits.yaoguo.module.main.diy.zrbannerpage.library.SpeedRecyclerView
            android:id="@+id/banner_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="364" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="236" />
    </LinearLayout>

</RelativeLayout>