<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/top_bar"
        layout="@layout/common_top_title"/>

    <RelativeLayout
        android:id="@+id/rl_location"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="30dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:textColor="@color/black_222222"
            android:textSize="14sp"
            android:text="地区"/>

        <ImageView
            android:id="@+id/iv_edit_location"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/ic_right_arrows"/>

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@id/iv_edit_location"
            android:text="请选择你所在的地区"
            android:textColor="@color/color_7F7F7F"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:text="是否在主页展示"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_7F7F7F"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:textSize="12sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:background="@color/white">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="展示地区标签"
           android:textSize="14sp"
           android:layout_alignParentStart="true"
           android:layout_marginLeft="16dp"
           android:textColor="@color/black_222222"
           android:layout_centerVertical="true"/>

        <cn.dreamfruits.yaoguo.view.switchbutton.SwitchButton
            android:id="@+id/sb_show_location"
            android:layout_width="45dp"
            android:layout_height="29dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            app:sb_background="@color/gray_E6E6E6"
            app:sb_checked_color="#8BD85F" />

    </RelativeLayout>

</LinearLayout>