<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:ignore="MissingDefaultResource">

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.scwang.smart.refresh.header.TwoLevelHeader
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/qq_show"
                android:id="@+id/second_floor"
                android:layout_width="match_parent"
                android:layout_height="241dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop" />
            <FrameLayout
                android:id="@+id/second_floor_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0">
                <!--二楼内容 可加列表啥的-->
                <ImageView
                    android:background="@drawable/home_test_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop" />
            </FrameLayout>

        </com.scwang.smart.refresh.header.TwoLevelHeader>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/nested_scrolling"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/app_bar"
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/toolbar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:background="@drawable/bg_white_round_corner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <!--unity封面-->
                            <ImageView
                                android:scaleType="fitCenter"
                                android:id="@+id/iv_unity_cover"
                                android:layout_width="match_parent"
                                android:layout_height="241dp"
                                tools:ignore="MissingConstraints" />

                            <LinearLayout
                                android:id="@+id/ll_move_top"
                                android:clickable="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-80dp"
                                android:background="@drawable/shape_gardient_linear_mine_top"
                                android:orientation="vertical"
                                android:paddingBottom="36dp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="24dp">

                                    <ImageView
                                        android:id="@+id/iv_avatar"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_marginLeft="17dp" />

                                    <ImageView
                                        android:visibility="gone"
                                        android:id="@+id/iv_badge"
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:layout_alignBottom="@id/iv_avatar"
                                        android:layout_marginLeft="-25dp"
                                        android:layout_toRightOf="@id/iv_avatar"
                                        android:background="@drawable/ic_badge" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="8dp"
                                        android:layout_toRightOf="@id/iv_avatar"
                                        android:orientation="vertical">
                                        <TextView
                                            android:id="@+id/tv_nickname"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="54dp"
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:textColor="@color/black_222222"
                                            android:textSize="18sp"
                                            android:textStyle="bold"
                                            tools:text="活了一百万年" />

                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:paddingTop="2dp"
                                            android:paddingBottom="2dp">

                                            <TextView
                                                android:id="@+id/tv_number"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textColor="#959595"
                                                android:textSize="10sp"
                                                tools:text="微酸号：123456789123" />

                                            <ImageView
                                                android:id="@+id/iv_qrcode"
                                                android:layout_width="10dp"
                                                android:layout_height="10dp"
                                                android:layout_centerInParent="true"
                                                android:layout_gravity="center_vertical"
                                                android:layout_marginLeft="6dp"
                                                android:layout_toRightOf="@+id/tv_number"
                                                android:background="@drawable/icon_code" />
                                        </RelativeLayout>

                                        <ImageView
                                            android:id="@+id/iv_id_card"
                                            android:layout_width="25dp"
                                            android:layout_height="16dp"
                                            android:layout_alignTop="@id/tv_nickname"
                                            android:layout_alignBottom="@id/tv_nickname"
                                            android:layout_marginLeft="14dp"
                                            android:layout_toRightOf="@id/tv_nickname"
                                            android:scaleType="center"
                                            android:visibility="gone"
                                            app:srcCompat="@drawable/ic_card" />

                                        <ImageView
                                            android:id="@+id/iv_official_auth"
                                            android:layout_width="67dp"
                                            android:layout_height="19dp"
                                            android:layout_alignTop="@id/tv_nickname"
                                            android:layout_alignBottom="@id/tv_nickname"
                                            android:layout_marginLeft="7dp"
                                            android:layout_toRightOf="@id/iv_id_card"
                                            android:scaleType="center"
                                            android:visibility="gone"
                                            app:srcCompat="@drawable/ic_official_auth" />

                                    </LinearLayout>

                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_marginRight="16dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/edit_signature"
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:layout_gravity="center_vertical"
                                        android:background="@drawable/edit" />

                                    <TextView
                                        android:id="@+id/tv_signature"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="2dp"
                                        android:ellipsize="end"
                                        android:maxLines="4"
                                        android:textColor="#7F7F7F "
                                        android:textSize="13sp"
                                        tools:text="都说成年人的崩溃是从借钱都说成年人的崩溃都说都说成年人的崩溃是从借钱开始的都说成年人的崩溃是从借钱开始的成年人的崩溃是从借钱开始的都说成年人的崩溃是从借钱开始的是从借钱开始的都说成年人的崩溃是从借钱开始的开始的都说成年人的崩溃是从借钱开始的，更崩溃.." />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="18dp"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="16dp"
                                        android:background="@drawable/shape_solid_e4e6ea_corners_4dp"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal"
                                        android:paddingLeft="8dp"
                                        android:paddingTop="3dp"
                                        android:paddingRight="8dp"
                                        android:paddingBottom="3dp">

                                        <ImageView
                                            android:layout_marginRight="3dp"
                                            android:id="@+id/iv_gender"
                                            android:layout_width="10dp"
                                            android:layout_height="10dp" />

                                        <TextView
                                            android:visibility="gone"
                                            android:id="@+id/tv_age"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="27岁"
                                            android:textColor="#ff464646"
                                            android:textSize="10sp" />
                                    </LinearLayout>

                                    <TextView
                                        android:paddingBottom="3dp"
                                        android:paddingTop="3dp"
                                        android:paddingRight="5dp"
                                        android:paddingLeft="5dp"
                                        android:visibility="gone"
                                        android:id="@+id/tv_address"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:background="@drawable/shape_solid_e4e6ea_corners_4dp"
                                        android:gravity="center"
                                        android:text="香港九龙区"
                                        android:textColor="#ff464646"
                                        android:textSize="10sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="16dp"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginTop="18dp"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="146"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:id="@+id/ll_praise_and_collect"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="center_horizontal"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/tv_praise_and_collect_num"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textColor="@color/black_222222"
                                                android:textSize="14sp"
                                                android:textStyle="bold"
                                                tools:text="9" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="获赞"
                                                android:textColor="@color/color_7F7F7F"
                                                android:textSize="10sp" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/ll_follow"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="center_horizontal"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/tv_follow_num"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textColor="@color/black_222222"
                                                android:textSize="14sp"
                                                android:textStyle="bold"
                                                tools:text="2130" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="作品数"
                                                android:textColor="@color/color_7F7F7F"
                                                android:textSize="10sp" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:id="@+id/ll_fans"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="center_horizontal"
                                            android:orientation="vertical">

                                            <TextView
                                                android:id="@+id/tv_fans_num"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textColor="@color/black_222222"
                                                android:textSize="14sp"
                                                android:textStyle="bold"
                                                tools:text="9" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="粉丝"
                                                android:textColor="@color/color_7F7F7F"
                                                android:textSize="10sp" />

                                        </LinearLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_weight="230"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content">
                                        <!-- 编辑资料 设置-->
                                        <LinearLayout
                                            android:visibility="gone"
                                            android:id="@+id/ll_edit_user_info_and_setting"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="right">

                                            <LinearLayout
                                                android:id="@+id/ll_edit_user_info"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content">

                                                <TextView
                                                    android:layout_width="72dp"
                                                    android:layout_height="28dp"
                                                    android:background="@drawable/shape_stroke_1dp_solid_ffe4e6ea_coeners_4dp"
                                                    android:gravity="center"
                                                    android:text="编辑资料"
                                                    android:textColor="#ff464646"
                                                    android:textSize="13sp" />

                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="39dp"
                                                android:layout_height="28dp"
                                                android:layout_marginLeft="8dp"
                                                android:background="@drawable/shape_solid_e4e6ea_corners_4dp"
                                                android:gravity="center">

                                                <ImageView
                                                    android:id="@+id/iv_setting"
                                                    android:layout_width="20dp"
                                                    android:layout_height="20dp"
                                                    android:background="@drawable/my_icon_set" />

                                            </LinearLayout>
                                        </LinearLayout>

                                        <!-- 发消息 关注-->
                                        <LinearLayout
                                            android:visibility="gone"
                                            android:id="@+id/message_care"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="right">

                                            <LinearLayout
                                                android:id="@+id/ll_send_message"
                                                android:layout_width="60dp"
                                                android:layout_height="28dp"
                                                android:background="@drawable/shape_solid_000_corners_4dp"
                                                android:gravity="center">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:gravity="center"
                                                    android:text="发消息"
                                                    android:textColor="#ffffffff"
                                                    android:textSize="13sp" />

                                            </LinearLayout>

                                            <LinearLayout
                                                android:id="@+id/ll_care"
                                                android:layout_width="39dp"
                                                android:layout_height="28dp"
                                                android:layout_marginLeft="8dp"
                                                android:background="@drawable/shape_solid_e4e6ea_corners_4dp"
                                                android:gravity="center">

                                                <ImageView
                                                    android:layout_width="20dp"
                                                    android:layout_height="20dp"
                                                    android:background="@drawable/share_icon_fllow" />
                                            </LinearLayout>
                                        </LinearLayout>

                                        <!--关注 聊天-->
                                        <LinearLayout
                                            android:visibility="gone"
                                            android:id="@+id/follow_chat"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="right">

                                            <LinearLayout
                                                android:id="@+id/follow_ll"
                                                android:layout_width="60dp"
                                                android:layout_height="28dp"
                                                android:background="@drawable/shape_solid_000_corners_4dp"
                                                android:gravity="center">

                                                <ImageView
                                                    android:layout_width="9dp"
                                                    android:layout_height="9dp"
                                                    android:background="@drawable/icon_follow_add" />

                                                <TextView
                                                    android:layout_marginLeft="2dp"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:gravity="center"
                                                    android:text="关注"
                                                    android:textColor="#ffffffff"
                                                    android:textSize="13sp" />

                                            </LinearLayout>

                                            <LinearLayout
                                                android:id="@+id/chat_ll"
                                                android:layout_width="39dp"
                                                android:layout_height="28dp"
                                                android:layout_marginLeft="8dp"
                                                android:background="@drawable/shape_solid_e4e6ea_corners_4dp"
                                                android:gravity="center">
                                                <ImageView
                                                    android:layout_width="20dp"
                                                    android:layout_height="20dp"
                                                    android:background="@drawable/my_icon_chat" />
                                            </LinearLayout>

                                        </LinearLayout>
                                    </LinearLayout>

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <!--用于变色的上半部分的遮罩-->
                        <View
                            android:id="@+id/ll_top"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </FrameLayout>

                    <!--占位toolbar-->
                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="76dp"
                        android:visibility="invisible"
                        app:layout_collapseMode="pin" />

                </com.google.android.material.appbar.CollapsingToolbarLayout>

                <!--toolbar指示器-->
                <LinearLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_solid_fff_corners_lt_20dp_rt_20dp"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <FrameLayout
                            android:id="@+id/viewpager_linear"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="3">

                            <androidx.appcompat.widget.Toolbar
                                android:id="@+id/include_viewpager_toolbar"
                                android:layout_width="match_parent"
                                android:layout_height="44dp"
                                android:theme="@style/AppTheme.AppBarOverlay"
                                app:contentInsetStart="0dp"
                                app:popupTheme="@style/AppTheme.PopupOverlay" />

                            <net.lucode.hackware.magicindicator.MagicIndicator
                                android:id="@+id/magic_indicator"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:textStyle="bold" />
                        </FrameLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />
                    </LinearLayout>
                </LinearLayout>

            </com.google.android.material.appbar.AppBarLayout>

            <!--viewpager-->
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f9f9f9"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </com.scwang.smart.refresh.layout.SmartRefreshLayout>
    <!--顶部-->
    <LinearLayout
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <!--状态栏-->
        <View
            android:id="@+id/view_status_height"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/transparent" />

        <RelativeLayout
            android:id="@+id/ll_top_bar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/transparent">

            <!--返回-->
            <ImageView
                android:visibility="gone"
                android:id="@+id/top_back"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:background="@drawable/icon_back_white"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <!--头像-->
            <ImageView
                android:visibility="gone"
                android:id="@+id/top_icon"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <LinearLayout
                android:id="@+id/top_care_chat_ll"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <!--关注 聊天-->
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/top_care_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="230"
                    android:gravity="right">

                    <LinearLayout
                        android:id="@+id/top_care_ll"
                        android:layout_width="60dp"
                        android:layout_height="28dp"
                        android:background="@drawable/shape_solid_4de4e6ea_corners_4dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/icon_add1" />

                        <TextView
                            android:layout_marginLeft="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="关注"
                            android:textColor="#ffffffff"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/top_chat_ll"
                        android:layout_width="39dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/shape_solid_4de4e6ea_corners_4dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/my_icon_chat1" />

                    </LinearLayout>

                </LinearLayout>
                <!--发消息 关注-->
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/top_send_care"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="230"
                    android:gravity="right">

                    <LinearLayout
                        android:id="@+id/top_send_ll"
                        android:layout_width="60dp"
                        android:layout_height="28dp"
                        android:background="@drawable/shape_solid_4de4e6ea_corners_4dp"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="发消息"
                            android:textColor="#ffffffff"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/top_care_ll2"
                        android:layout_width="39dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/shape_solid_4de4e6ea_corners_4dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/share_icon_fllow1" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


            <!--分享-->
            <ImageView
                android:visibility="visible"
                android:id="@+id/top_share"
                android:layout_centerVertical="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/mine_icon_share" />

        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_marginTop="-20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/iv_user_center_tag"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/user_center_tag"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>