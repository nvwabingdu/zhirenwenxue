<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_re_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical"
    android:focusable="true">
    <!--评论部分-->
    <!--        <com.example.dragpopwindow.MyRelativeLayout-->
    <View
        android:layout_marginBottom="-10dp"
        android:layout_weight="2"
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:layout_weight="3"
        android:id="@+id/pop_MyRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/shape_solid_ffffff_corners_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="76.1dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/top_relativelayout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">
                <LinearLayout
                    android:id="@+id/pop_close"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:paddingRight="17dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/comment_back_img" />
                </LinearLayout>


                <TextView
                    android:id="@+id/comment_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="暂无评论"
                    android:textColor="#ff333333"
                    android:textSize="16sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/comment_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/top_relativelayout"
                android:orientation="vertical">
                <!--缺省-->
                <LinearLayout
                    android:id="@+id/comment_default_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="197dp"
                        android:layout_height="130dp"
                        android:src="@drawable/comment_pop_default_img" />

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="说点什么吧，"
                            android:textColor="#7f7f7f"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="点击评论"
                            android:textColor="#222222"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
                <!--评论列表-->
                <com.scwang.smart.refresh.layout.SmartRefreshLayout
                    android:id="@+id/refreshLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <cn.dreamfruits.yaoguo.module.main.home.MaxRecyclerView
                                android:id="@+id/comment_recyclerview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp" />
                            <!--尾部-->
                            <LinearLayout
                                android:id="@+id/comment_end"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="20dp"
                                    android:background="#F0F0F0" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="20dp"
                                    android:gravity="center_vertical">

                                    <View
                                        android:layout_width="20dp"
                                        android:layout_height="1dp"
                                        android:background="#B3B3B3" />

                                    <TextView
                                        android:layout_width="47dp"
                                        android:layout_height="17dp"
                                        android:layout_marginLeft="6dp"
                                        android:text="The End"
                                        android:textColor="#ffb3b3b3"
                                        android:textSize="12sp" />

                                    <View
                                        android:layout_width="20dp"
                                        android:layout_height="1dp"
                                        android:layout_marginLeft="6dp"
                                        android:background="#B3B3B3" />

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                    </ScrollView>

                    <com.scwang.smart.refresh.footer.ClassicsFooter
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.scwang.smart.refresh.layout.SmartRefreshLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/comment_bottom_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#E5E5E5" />

            <TextView
                android:id="@+id/pop_reply_tv"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/home_shape_solid_f5f5f5_soners_33dp"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:text="欢迎大家的友善评论～"
                android:textColor="#B3B3B3"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
