<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:text="分享到"
        android:textColor="#ff8c8c8c"
        android:textSize="14sp"/>

    <View
        android:visibility="gone"
        android:background="#F0F0F0"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="91dp"/>
    <View
        android:background="#F0F0F0"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:orientation="horizontal"
        android:gravity="left|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="101dp">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:background="@drawable/shape_oval_e9"
                android:layout_width="47dp"
                android:layout_height="47dp">
                <ImageView
                    android:background="@drawable/share_icon_firend"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="私信好友"
                android:textColor="#ff333333"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:background="@drawable/shape_oval_5a"
                android:layout_width="47dp"
                android:layout_height="47dp">
                <ImageView
                    android:background="@drawable/share_icon_wechat"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信好友"
                android:textColor="#ff333333"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:background="@drawable/shape_oval_95"
                android:layout_width="47dp"
                android:layout_height="47dp">
                <ImageView
                    android:background="@drawable/share_icon_pyq"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="朋友圈"
                android:textColor="#ff333333"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:background="@drawable/shape_oval_7b"
                android:layout_width="47dp"
                android:layout_height="47dp">
                <ImageView
                    android:background="@drawable/share_icon_qq"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ好友"
                android:textColor="#ff333333"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:background="#F0F0F0"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <HorizontalScrollView
        android:scrollbars="none"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingRight="30dp"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal"
            android:gravity="left|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="103dp">
            <!--生成海报-->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_share_poster"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:background="@drawable/shape_oval_c4efefef"
                    android:layout_width="47dp"
                    android:layout_height="47dp">
                    <ImageView
                        android:background="@drawable/share_icon_pic"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生成海报"
                    android:textColor="#ff333333"
                    android:textSize="12sp" />
            </LinearLayout>
            <!--复制链接-->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_share_link"
                android:gravity="center_horizontal"
                android:layout_marginLeft="36dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:background="@drawable/shape_oval_c4efefef"
                    android:layout_width="47dp"
                    android:layout_height="47dp">
                    <ImageView
                        android:background="@drawable/share_icon_link"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="复制链接"
                    android:textColor="#ff333333"
                    android:textSize="12sp" />
            </LinearLayout>
            <!--权限设置-->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_share_permission"
                android:gravity="center_horizontal"
                android:layout_marginLeft="36dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:background="@drawable/shape_oval_c4efefef"
                    android:layout_width="47dp"
                    android:layout_height="47dp">
                    <ImageView
                        android:background="@drawable/share_icon_edit"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="权限设置"
                    android:textColor="#ff333333"
                    android:textSize="12sp" />
            </LinearLayout>
            <!--删除-->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_share_delete"
                android:gravity="center_horizontal"
                android:layout_marginLeft="36dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:background="@drawable/shape_oval_c4efefef"
                    android:layout_width="47dp"
                    android:layout_height="47dp">
                    <ImageView
                        android:background="@drawable/share_icon_del"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="删除"
                    android:textColor="#ff333333"
                    android:textSize="12sp" />
            </LinearLayout>
            <!--二维码-->
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_share_qrcode"
                android:gravity="center_horizontal"
                android:layout_marginLeft="36dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:background="@drawable/shape_oval_c4efefef"
                    android:layout_width="47dp"
                    android:layout_height="47dp">
                    <ImageView
                        android:background="@drawable/share_icon_code"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="二维码"
                    android:textColor="#ff333333"
                    android:textSize="12sp" />
            </LinearLayout>
            <!--举报-->
            <LinearLayout

                android:id="@+id/ll_share_report"
                android:gravity="center_horizontal"
                android:layout_marginLeft="36dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:background="@drawable/share_icon_jubao"
                    android:layout_width="47dp"
                    android:layout_height="47dp">
                </LinearLayout>
                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="举报"
                    android:textColor="#ff333333"
                    android:textSize="12sp" />
            </LinearLayout>
            <!--拉黑-->
            <LinearLayout
                android:id="@+id/ll_share_black"
                android:gravity="center_horizontal"
                android:layout_marginLeft="36dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:background="@drawable/shape_oval_c4efefef"
                    android:layout_width="47dp"
                    android:layout_height="47dp">
                    <ImageView
                        android:background="@drawable/share_icon_lahei"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拉黑"
                    android:textColor="#ff333333"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:background="#F0F0F0"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/cancel"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:text="取消"
        android:textColor="#ff000000"
        android:textSize="18sp" />

</LinearLayout>