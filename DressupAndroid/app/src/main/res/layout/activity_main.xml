<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main_root_layout"
    android:background="@color/white">


    <cn.dreamfruits.yaoguo.module.main.home.NoScrollViewPager
        android:layout_marginBottom="48dp"
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <LinearLayout
        android:id="@+id/bottom_nav_root_layout"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/bottom_nav_textview_home"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/bottom_nav_home"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/bottom_nav_textview_classify"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/bottom_nav_stroll"
            android:textColor="#979797"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:id="@+id/bottom_nav_view_issue"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/bottom_nav_view_issue_img"
                android:background="@drawable/issue"
                android:layout_width="56dp"
                android:layout_height="35dp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/bottom_nav_textview_message"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/bottom_nav_message"
            android:textColor="#979797"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/bottom_nav_textview_mine"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/bottom_nav_mine"
            android:textColor="#979797"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
</RelativeLayout>