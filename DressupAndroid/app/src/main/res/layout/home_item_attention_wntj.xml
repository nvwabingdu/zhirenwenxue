<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130dp"
    android:background="@drawable/shape_solid_ffffff_corners_2dp"
    android:layout_marginRight="10dp"
    android:layout_height="195dp">

        <LinearLayout
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/attention_recommend_for_you_icon"
                android:layout_width="66dp"
                android:layout_height="66dp"/>

            <TextView
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/attention_recommend_for_you_username"
                android:layout_marginTop="8dp"
                android:text="用户名"
                android:textColor="#333333"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:id="@+id/attention_recommend_for_you_introduction"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="7dp"
                android:text="通讯录：aiiai212121212"
                android:textColor="#7F7F7F"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/attention_recommend_for_you_is_attention"
                android:layout_marginTop="22dp"
                android:layout_width="58dp"
                android:layout_height="28dp"/>
        </LinearLayout>


    <ImageView
        android:id="@+id/attention_recommend_for_you_del"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/home_delete"
        android:layout_width="26dp"
        android:layout_height="26dp"/>



</RelativeLayout>