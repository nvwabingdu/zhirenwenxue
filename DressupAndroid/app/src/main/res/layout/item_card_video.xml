<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="86dp"
        android:layout_height="112dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_cover"
        android:layout_width="86dp"
        android:layout_height="112dp"
        android:background="#50000000"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/change_cover"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:background="@color/black_40"
        app:layout_constraintBottom_toBottomOf="@id/iv_image"
        app:layout_constraintLeft_toLeftOf="@id/iv_image"
        app:layout_constraintRight_toRightOf="@id/iv_image" />


    <ImageView
        android:id="@+id/tv_image_icon"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:background="@drawable/ic_image"
        app:layout_constraintBottom_toBottomOf="@id/change_cover"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="@id/change_cover"
        app:layout_constraintRight_toLeftOf="@id/tv_cover_text"
        app:layout_constraintTop_toTopOf="@id/change_cover" />

    <TextView
        android:id="@+id/tv_cover_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="选封面"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_image_icon"
        app:layout_constraintLeft_toRightOf="@id/tv_image_icon"
        app:layout_constraintRight_toRightOf="@id/change_cover"
        app:layout_constraintTop_toTopOf="@id/tv_image_icon" />


    <View
        android:id="@+id/preview_video"
        android:layout_width="0dp"
        android:layout_height="29dp"
        android:layout_marginTop="12dp"
        android:background="@color/gray_F6F6F6"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/iv_image"
        app:layout_constraintRight_toRightOf="@id/iv_image"
        app:layout_constraintTop_toBottomOf="@id/iv_image" />

    <ImageView
        android:id="@+id/iv_preview_icon"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:background="@drawable/ic_play"
        app:layout_constraintBottom_toBottomOf="@+id/preview_video"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_preview_text"
        app:layout_constraintTop_toTopOf="@+id/preview_video" />

    <TextView
        android:id="@+id/iv_preview_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="预览视频"
        android:textColor="@color/black_222222"
        app:layout_constraintBottom_toBottomOf="@+id/iv_preview_icon"
        app:layout_constraintLeft_toRightOf="@id/iv_preview_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_preview_icon" />


</androidx.constraintlayout.widget.ConstraintLayout>