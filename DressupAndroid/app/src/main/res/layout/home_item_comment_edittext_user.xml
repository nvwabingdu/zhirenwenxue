<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:paddingBottom="20dp"
    android:paddingLeft="7dp"
    android:id="@+id/at_user_layout"
    android:paddingRight="7dp"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/at_user_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"/>
        <RelativeLayout
            android:id="@+id/at_user_select_layout"
            android:layout_width="48dp"
            android:layout_height="48dp">
            <ImageView
                android:background="@drawable/atuser_select_part1"
                android:layout_width="48dp"
                android:layout_height="48dp"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/atuser_select_part2"
                android:layout_width="16dp"
                android:layout_height="16dp"/>
        </RelativeLayout>
    </FrameLayout>


    <TextView
        android:id="@+id/at_user_name"
        android:layout_marginTop="6dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小雪子2348"
        android:textColor="#ff333333"
        android:textSize="12sp" />

</LinearLayout>