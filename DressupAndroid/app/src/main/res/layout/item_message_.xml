<?xml version="1.0" encoding="utf-8"?>
<cn.dreamfruits.yaoguo.view.swipe.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sml_all"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--    app:clickToClose="true"-->
    <!--    app:leftEdgeSwipeOffset="0dp"-->
    <!--    app:rightEdgeSwipeOffset="0dp"-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/message_icon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/cicrle_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022-2-12"
            android:textColor="#ffb3b3b3"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/message_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/message_name" />

        <TextView
            android:id="@+id/message_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="8dp"
            android:paddingTop="4dp"
            android:paddingRight="48dp"
            android:text=""
            android:textColor="#ff222222"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/message_icon"
            app:layout_constraintRight_toLeftOf="@id/message_time"
            app:layout_constraintTop_toTopOf="@id/message_icon" />

        <TextView
            android:id="@+id/message_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="8dp"
            android:paddingBottom="4dp"
            android:text=""
            android:textColor="#ffb3b3b3"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/message_icon"
            app:layout_constraintLeft_toRightOf="@id/message_icon"
            app:layout_constraintRight_toLeftOf="@+id/ll_right" />

        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/message_details"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/message_details">

            <ImageView
                android:id="@+id/message_set_top_img"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/message_set_top" />

            <ImageView
                android:id="@+id/message_mute_img"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/message_mute" />

            <View
                android:id="@+id/view_red_dot"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/shape_oval_ea4359" />

            <TextView
                android:id="@+id/message_message_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:background="@drawable/shape_oval_ea4359"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="99+"
                android:textColor="#ffffff"
                android:textSize="12sp" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="132dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_to_top"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#EF915B"
            android:gravity="center"
            android:text="置顶"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#EA4D3E"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_confim_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#EA4D3E"
            android:gravity="center"
            android:text="确认删除"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_cancel_top"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#EF915B"
            android:gravity="center"
            android:text="取消置顶"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:visibility="gone" />

    </LinearLayout>

</cn.dreamfruits.yaoguo.view.swipe.SwipeMenuLayout>

