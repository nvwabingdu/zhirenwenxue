<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="下午4:00"
        android:textColor="#7F7F7F"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_head_img"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="24dp"
        android:src="@mipmap/cicrle_default"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_time" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_child_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="100dp"
        app:layout_constraintLeft_toRightOf="@id/iv_head_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_head_img">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:src="@color/color_bfbfbf"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/iv_video_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:src="@drawable/ic_play"
            app:layout_constraintLeft_toLeftOf="@id/iv_cover"
            app:layout_constraintTop_toTopOf="@id/iv_cover" />

        <TextView
            android:id="@+id/tv_post_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingLeft="18dp"
            android:paddingTop="12dp"
            android:paddingRight="18dp"
            android:text="整套超级好看的绿色衣服不要太漂亮哦，好看看就是很百..."
            android:textColor="@color/black_222222"
            android:textSize="@dimen/size_14dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/iv_cover"
            app:layout_constraintRight_toRightOf="@id/iv_cover"
            app:layout_constraintTop_toBottomOf="@id/iv_cover" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="18dp"
            android:paddingTop="10dp"
            android:paddingBottom="14dp"
            app:layout_constraintLeft_toLeftOf="@id/iv_cover"
            app:layout_constraintRight_toRightOf="@id/iv_cover"
            app:layout_constraintTop_toBottomOf="@id/tv_post_content">

            <ImageView
                android:id="@+id/iv_post_head_img"
                android:layout_width="24dp"
                android:layout_height="24dp"

                android:src="@mipmap/cicrle_default" />

            <TextView
                android:id="@+id/tv_post_nick_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="昵称"
                android:textColor="#373737"
                android:textSize="14dp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/iv_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:src="@drawable/icon_chart_send_fail"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/cl_child_content"
        app:layout_constraintLeft_toRightOf="@id/cl_child_content"
        app:layout_constraintTop_toTopOf="@id/cl_child_content" />

    <ProgressBar
        android:id="@+id/pr_is_send"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/iv_fail"
        app:layout_constraintRight_toRightOf="@id/iv_fail"
        app:layout_constraintTop_toTopOf="@id/iv_fail" />

</androidx.constraintlayout.widget.ConstraintLayout>