<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/et_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="搜索位置"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="12dp"
        android:textSize="14sp"
        android:paddingVertical="8dp"
        android:paddingLeft="14dp"
        android:background="@drawable/shape_solid_ffffff_stroke_ff949494_dp1"
        app:layout_constraintRight_toLeftOf="@id/tv_cancel"/>
    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        android:textColor="@color/color_7F7F7F"
        app:layout_constraintLeft_toRightOf="@id/et_address"
        app:layout_constraintBottom_toBottomOf="@id/et_address"
        android:layout_marginLeft="20dp"
        android:textSize="14dp"
        android:layout_marginRight="14dp"
        app:layout_constraintTop_toTopOf="@id/et_address"
        app:layout_constraintRight_toRightOf="parent"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_location"
        app:layout_constraintTop_toBottomOf="@id/et_address"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>