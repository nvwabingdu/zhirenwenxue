<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_one_key_bind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号绑定"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18sp"
        android:textColor="@color/black_222222"
        android:layout_marginTop="23dp"/>

    <ImageView
        android:id="@+id/ic_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="23dp"
        android:layout_marginRight="33dp"/>

    <TextView
        android:id="@+id/tv_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_222222"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_one_key_bind"
        android:layout_marginTop="41dp"
        tools:text="156****5837"/>

    <TextView
        android:id="@+id/tv_bind_phone_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_7F7F7F"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_phone_number"
        tools:text="中国移动提认证服务" />

    <TextView
        android:id="@+id/tv_bind_phone"
        android:layout_width="295dp"
        android:layout_height="44dp"
        android:background="@drawable/bg_black"
        android:gravity="center"
        android:text="一键绑定"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_bind_phone_slogan"/>

    <TextView
        android:id="@+id/tv_bind_other_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="绑定其他手机"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_bind_phone"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/black_222222"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="40dp" />


</androidx.constraintlayout.widget.ConstraintLayout>