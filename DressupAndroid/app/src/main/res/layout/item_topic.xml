<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginHorizontal="14dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/topic_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="14sp"
        android:textColor="@color/black_222222"
        android:text="#"/>

    <TextView
        android:id="@+id/tv_topic_name"
        app:layout_constraintLeft_toRightOf="@id/topic_tag"
        app:layout_constraintTop_toTopOf="@id/topic_tag"
        app:layout_constraintBottom_toBottomOf="@id/topic_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/black_222222"
        tools:text="暴风吸入绝绝子"/>

    <TextView
        android:id="@+id/tv_view_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21.5w次浏览"
        android:textSize="12sp"
        android:textColor="@color/gray_B3B3B3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/topic_tag"
        app:layout_constraintBottom_toBottomOf="@id/topic_tag"/>



</androidx.constraintlayout.widget.ConstraintLayout>