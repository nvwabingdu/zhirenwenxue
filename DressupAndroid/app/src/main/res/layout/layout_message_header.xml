<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingTop="14dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp">

    <LinearLayout
        android:id="@+id/message_laud_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/message_laud_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/message_laud" />

            <TextView
                android:id="@+id/message_laud_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-4dp"
                android:layout_toRightOf="@+id/message_laud_img"
                android:background="@drawable/shape_oval_ea4359"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="9"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:visibility="gone" />
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:paddingRight="4dp"
            android:text="赞\收藏\引用"
            android:textColor="#ff222222"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/message_follow_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/message_care_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/message_care" />

            <TextView
                android:id="@+id/message_follow_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-4dp"
                android:layout_toRightOf="@+id/message_care_img"
                android:background="@drawable/shape_oval_ea4359"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="99"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:visibility="gone" />
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:paddingRight="4dp"
            android:text="新关注"
            android:textColor="#ff222222"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/message_comment_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/message_comment_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/message_comment" />

            <TextView
                android:id="@+id/message_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-4dp"
                android:layout_toRightOf="@+id/message_comment_img"
                android:background="@drawable/shape_oval_ea4359"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="99"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:visibility="gone" />
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:paddingRight="4dp"
            android:text="评论"
            android:textColor="#ff222222"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>