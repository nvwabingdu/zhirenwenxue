<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="下午4:00"
        android:textColor="#7F7F7F"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_left_head_img"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_green_circle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_time" />


    <ImageView
        android:id="@+id/iv_left_cover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="100dp"
        android:src="@color/color_bfbfbf"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintLeft_toRightOf="@id/iv_left_head_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_left_head_img" />


    <ImageView
        android:id="@+id/iv_right_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:src="@drawable/icon_chart_send_fail"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/iv_left_cover"
        app:layout_constraintLeft_toRightOf="@id/iv_left_cover"
        app:layout_constraintTop_toTopOf="@id/iv_left_cover" />

    <ImageView
        android:id="@+id/iv_video_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:src="@drawable/ic_play"
        app:layout_constraintLeft_toLeftOf="@id/iv_left_cover"
        app:layout_constraintTop_toTopOf="@id/iv_left_cover" />

    <TextView
        android:id="@+id/tv_post_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="18dp"
        android:paddingTop="12dp"
        android:paddingRight="18dp"
        android:paddingBottom="14dp"
        android:text="整套超级好看的绿色衣服不要太漂亮哦，好看看就是很百..."
        android:textColor="@color/black_222222"
        android:textSize="@dimen/size_14dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/iv_left_cover"
        app:layout_constraintRight_toRightOf="@id/iv_left_cover"
        app:layout_constraintTop_toBottomOf="@id/iv_left_cover" />


</androidx.constraintlayout.widget.ConstraintLayout>