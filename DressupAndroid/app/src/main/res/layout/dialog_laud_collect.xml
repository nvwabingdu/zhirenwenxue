<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="270dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/shape_solid_fff_corners_4dp"
            android:layout_marginTop="41dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/user_center_laud_collect"
                android:layout_width="match_parent"
                android:layout_height="88dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="127dp">
                <LinearLayout
                    android:layout_marginTop="17dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textStyle="bold"
                            android:id="@+id/laud_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textColor="#ff000000"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_marginTop="6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="获赞"
                            android:textColor="#ff8c8c8c"
                            android:textSize="12sp"
                            />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textStyle="bold"
                            android:id="@+id/collect_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textColor="#ff000000"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_marginTop="6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收藏"
                            android:textColor="#ff8c8c8c"
                            android:textSize="12sp"
                            />


                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_marginBottom="16dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/tv_know"
                    android:background="@color/black"
                    android:layout_gravity="center_horizontal"
                    android:paddingRight="40dp"
                    android:paddingLeft="40dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我知道了"
                    android:textColor="#ffffffff"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:layout_gravity="center_horizontal"
            android:background="@drawable/user_center_laud_collect_top"
            android:layout_width="78dp"
            android:layout_height="78dp"/>
    </FrameLayout>

</LinearLayout>