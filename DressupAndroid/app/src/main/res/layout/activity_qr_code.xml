<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_bg"
        android:scaleType="centerCrop"
        android:src="@drawable/home_test_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:background="#db1B1B1B"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/status_bar"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <ImageView
                android:id="@+id/back"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/icon_back_white"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </LinearLayout>

        <cn.dreamfruits.yaoguo.module.main.home.phonebook.ZrQrCodeView
            android:id="@+id/qr_code_pic"
            android:layout_centerInParent="true"
            android:layout_marginRight="38dp"
            android:layout_marginLeft="38dp"
            android:layout_width="match_parent"
            android:layout_height="382dp"/>

        <LinearLayout
            android:layout_marginBottom="83dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/scan"
                    android:background="@drawable/follow_icon_scan"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="扫一扫"
                    android:textColor="#ffffffff"
                    android:textSize="14sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/save"
                    android:background="@drawable/follow_icon_save"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保存"
                    android:textColor="#ffffffff"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>