<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_clothes_cover"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <ImageView
        android:id="@+id/iv_delete_clothes"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@drawable/ic_close_round"
        app:layout_constraintTop_toTopOf="@id/iv_clothes_cover"
        app:layout_constraintRight_toRightOf="@id/iv_clothes_cover"/>

</androidx.constraintlayout.widget.ConstraintLayout>