<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="下午4:00"
        android:textColor="#7F7F7F"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_head_img"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_green_circle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_time" />

    <ImageView
        android:id="@+id/iv_head_img_fake"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_green_circle"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_time" />

    <ImageView
        android:id="@+id/iv_left_cover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="58dp"
        android:src="@color/color_bfbfbf"
        app:layout_constraintDimensionRatio="H,2:1"
        app:layout_constraintLeft_toRightOf="@id/iv_head_img"
        app:layout_constraintRight_toLeftOf="@id/iv_head_img_fake"
        app:layout_constraintTop_toTopOf="@id/iv_head_img" />


    <ImageView
        android:id="@+id/iv_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:src="@drawable/icon_chart_send_fail"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/iv_left_cover"
        app:layout_constraintLeft_toRightOf="@id/iv_left_cover"
        app:layout_constraintTop_toTopOf="@id/iv_left_cover" />

    <ImageView
        android:id="@+id/iv_video_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play"
        app:layout_constraintBottom_toBottomOf="@id/iv_left_cover"
        app:layout_constraintLeft_toLeftOf="@id/iv_left_cover"
        app:layout_constraintRight_toRightOf="@id/iv_left_cover"
        app:layout_constraintTop_toTopOf="@id/iv_left_cover" />

    <View
        android:id="@+id/view_video_download_mask"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#60000000"
        app:layout_constraintBottom_toBottomOf="@id/iv_left_cover"
        app:layout_constraintLeft_toLeftOf="@id/iv_left_cover"
        app:layout_constraintRight_toRightOf="@id/iv_left_cover"
        app:layout_constraintTop_toTopOf="@id/iv_left_cover" />

    <TextView
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_left_cover"
        app:layout_constraintLeft_toLeftOf="@id/iv_left_cover"
        app:layout_constraintRight_toRightOf="@id/iv_left_cover"
        app:layout_constraintTop_toTopOf="@id/iv_left_cover" />


</androidx.constraintlayout.widget.ConstraintLayout>