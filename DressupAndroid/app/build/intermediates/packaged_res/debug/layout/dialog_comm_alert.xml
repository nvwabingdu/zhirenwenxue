<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_solid_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_alert_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black_222222"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:textSize="16sp"
        tools:text="内容"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_E6E6E6" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">
        
        <TextView
            android:id="@+id/tv_alert_confirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/gray_B3B3B3"
            android:gravity="center"
            android:textSize="16sp"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="确定"/>

        <View
            android:id="@+id/split_line"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/gray_E6E6E6" />

        <TextView
            android:id="@+id/tv_alert_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black_222222"
            android:gravity="center"
            android:textSize="16sp"
            tools:text="取消"/>

    </LinearLayout>


</LinearLayout>