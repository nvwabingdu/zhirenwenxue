<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_marginTop="16dp"
        android:paddingRight="16dp"
        android:paddingLeft="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="28dp">
        <ImageView
            android:id="@+id/img_back"
            android:rotation="90"
            android:background="@drawable/home_arrow_down"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <RelativeLayout
            android:layout_marginLeft="6dp"
            android:background="@drawable/shape_solid_ffffff_stroke_ff949494_dp1"
            android:layout_width="match_parent"
            android:layout_height="28dp">

            <LinearLayout
                android:id="@+id/search_linear"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginRight="37dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/search_iv"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="13dp"
                    android:background="@drawable/home_search" />

                <TextView
                    android:maxLines="1"
                    android:id="@+id/search_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:text=""
                    android:textColor="#333333" />

            </LinearLayout>

            <ImageView
                android:id="@+id/search_del"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/search_details_del" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/viewpager_linear"
                android:layout_width="match_parent"
                android:layout_height="46dp">
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/include_viewpager_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:theme="@style/AppTheme.AppBarOverlay"
                    app:contentInsetStart="0dp"
                    app:popupTheme="@style/AppTheme.PopupOverlay" />

                <net.lucode.hackware.magicindicator.MagicIndicator
                    android:textStyle="bold"
                    android:id="@+id/magic_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp" />

            </FrameLayout>
        <View
            android:background="#efefef"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"/>

            <androidx.viewpager.widget.ViewPager
                android:layout_marginTop="5dp"
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>





</LinearLayout>