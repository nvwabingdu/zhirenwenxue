<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/comment_bottom_layout"
    android:layout_height="83.1dp">
    <View
        android:background="#E5E5E5"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"/>

    <RelativeLayout
        android:layout_marginTop="0.1dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginRight="146dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/laud_layout"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/laud_pic"
                    android:src="@drawable/home_thumb"
                    android:layout_width="@dimen/laud_collect_comment"
                    android:layout_height="@dimen/laud_collect_comment"/>
                <TextView
                    android:id="@+id/laud_tv"
                    android:layout_marginTop="4dp"
                    android:textColor="#333333"
                    android:textSize="@dimen/laud_collect_comment_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/collect_layout"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/collect_pic"
                    android:src="@drawable/home_collect_ed"
                    android:layout_width="@dimen/laud_collect_comment"
                    android:layout_height="@dimen/laud_collect_comment"/>
                <TextView
                    android:id="@+id/collect_tv"
                    android:layout_marginTop="4dp"
                    android:textColor="#333333"
                    android:textSize="@dimen/laud_collect_comment_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/comment_layout"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/comment_pic"
                    android:src="@drawable/home_comment"
                    android:layout_width="@dimen/laud_collect_comment"
                    android:layout_height="@dimen/laud_collect_comment"/>
                <TextView
                    android:id="@+id/comment_tv"
                    android:layout_marginTop="4dp"
                    android:textColor="#333333"
                    android:textSize="@dimen/laud_collect_comment_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/dress_layout"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/dress_pic"
                    android:src="@drawable/home_dress"
                    android:layout_width="@dimen/laud_collect_comment"
                    android:layout_height="@dimen/laud_collect_comment"/>
                <TextView
                    android:id="@+id/dress_tv"
                    android:layout_marginTop="4dp"
                    android:textColor="#333333"
                    android:textSize="@dimen/laud_collect_comment_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/dress_try"
            android:layout_width="100dp"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp"
            android:background="#000000"
            android:gravity="center"
            android:text="一键试穿"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

    </RelativeLayout>

</RelativeLayout>