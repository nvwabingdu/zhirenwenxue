<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_re_layout"
    android:background="#00000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.dragpopwindow.MyRelativeLayout
        android:background="@drawable/shape_solid_ffffff_corners_10dp"
        android:id="@+id/pop_MyRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="608dp"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_marginBottom="76.1dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/top_relativelayout"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <ImageView
                    android:id="@+id/pop_close"
                    android:layout_marginLeft="10dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/home_delete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="241条评论"
                    android:textColor="#ff333333"
                    android:textSize="16sp" />
            </RelativeLayout>
<!--            <androidx.recyclerview.widget.RecyclerView-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_below="@+id/top_relativelayout"-->
<!--                android:id="@+id/pop_recyclerview"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent" />-->
            <LinearLayout
                android:layout_below="@+id/top_relativelayout"
                android:orientation="vertical"
                android:id="@+id/comment_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--缺省-->
                <LinearLayout
                    android:visibility="gone"
                    android:layout_marginBottom="263dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:id="@+id/comment_default_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="40dp"
                        android:src="@drawable/comment_default"
                        android:layout_width="96dp"
                        android:layout_height="38dp"/>
                    <LinearLayout
                        android:layout_marginTop="14dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="说点什么吧，点击评论"
                            android:textColor="#7f7f7f"
                            android:textSize="12sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="说点什么吧，点击评论"
                            android:textColor="#222222"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
                <!--评论列表-->
                <com.scwang.smart.refresh.layout.SmartRefreshLayout
                    android:background="@color/white"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/refreshLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <cn.dreamfruits.yaoguo.module.main.home.MaxRecyclerView
                    android:id="@+id/comment_recyclerview"
                    android:layout_marginLeft="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                    <com.scwang.smart.refresh.footer.ClassicsFooter
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.scwang.smart.refresh.layout.SmartRefreshLayout>
                <!--尾部-->
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/comment_end"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_marginTop="20dp"
                        android:background="#F0F0F0"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <LinearLayout
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <View
                            android:background="#B3B3B3"
                            android:layout_width="20dp"
                            android:layout_height="1dp"/>

                        <TextView
                            android:layout_marginLeft="6dp"
                            android:layout_width="47dp"
                            android:layout_height="17dp"
                            android:text="The End"
                            android:textColor="#ffb3b3b3"
                            android:textSize="12sp"
                            />

                        <View
                            android:layout_marginLeft="6dp"
                            android:background="#B3B3B3"
                            android:layout_width="20dp"
                            android:layout_height="1dp"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/comment_bottom_part"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:background="#E5E5E5"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"/>
            <TextView
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/pop_reply_tv"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/home_shape_solid_f5f5f5_soners_33dp"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:text="欢迎大家的友善评论～"
                android:textColor="#B3B3B3"
                android:textSize="14sp" />
        </LinearLayout>
    </com.example.dragpopwindow.MyRelativeLayout>
</RelativeLayout>