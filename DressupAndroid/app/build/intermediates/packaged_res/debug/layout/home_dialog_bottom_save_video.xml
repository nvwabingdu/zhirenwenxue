<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@color/white"
        android:id="@+id/pop_video_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="106dp">
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="倍速"
                android:textColor="#ff000000"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/speed05x_layout"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/speed05x_tv"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.5x"
                android:textColor="#ffb3b3b3"
                android:textSize="16sp" />
            <View
                android:id="@+id/speed05x_tag"
                android:visibility="gone"
                android:layout_marginTop="2dp"
                android:background="#222222"
                android:layout_width="20dp"
                android:layout_height="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/speed1x_layout"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/speed1x_tv"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正常"
                android:textColor="#ff000000"
                android:textSize="16sp" />
            <View
                android:id="@+id/speed1x_tag"
                android:layout_marginTop="2dp"
                android:background="#222222"
                android:layout_width="20dp"
                android:layout_height="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/speed1_5x_layout"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/speed1_5x_tv"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.5x"
                android:textColor="#ffb3b3b3"
                android:textSize="16sp" />
            <View
                android:id="@+id/speed1_5x_tag"
                android:visibility="gone"
                android:layout_marginTop="2dp"
                android:background="#222222"
                android:layout_width="20dp"
                android:layout_height="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/speed2x_layout"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/speed2x_tv"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.0x"
                android:textColor="#ffb3b3b3"
                android:textSize="16sp" />
            <View
                android:id="@+id/speed2x_tag"
                android:visibility="gone"
                android:layout_marginTop="2dp"
                android:background="#222222"
                android:layout_width="20dp"
                android:layout_height="2dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_weight="16"
            android:layout_width="0dp"
            android:layout_height="45dp"/>
        <TextView
            android:layout_weight="343"
            android:id="@+id/save_tv"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:text="保存至相册"
            android:textColor="#ff000000"
            android:textSize="18sp" />

        <View
            android:layout_weight="16"
            android:layout_width="0dp"
            android:layout_height="45dp"/>
    </LinearLayout>

</LinearLayout>