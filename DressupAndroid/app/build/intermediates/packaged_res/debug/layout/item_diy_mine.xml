<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="112dp"
        android:layout_height="112dp">

        <ImageView
            android:id="@+id/diy_right_img"
            android:layout_width="112dp"
            android:layout_height="112dp" />

        <ImageView
            android:id="@+id/img_generation"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:background="@drawable/tag_formation_generation"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/img_under_review"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:background="@drawable/tag_under_review"
            android:visibility="gone" />
        <!--已私密-->
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_privacy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/icon_privacy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="已私密"
                android:textColor="#ffffffff"
                android:textSize="10sp" />


        </LinearLayout>
        <!--审核不通过-->
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_check"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff490000"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/icon_shenhe" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="审核不通过"
                android:textColor="#ffffffff"
                android:textSize="10sp" />


        </LinearLayout>
        <!--制作失败-->
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_create_fail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/icon_shib" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="制作失败"
                android:textColor="#ffffffff"
                android:textSize="10sp" />


        </LinearLayout>
        <!--        <TextView-->
        <!--            android:visibility="gone"-->
        <!--            android:layout_gravity="bottom"-->
        <!--            android:gravity="center"-->
        <!--            android:background="#5cd9d9d9"-->
        <!--            android:layout_width="106dp"-->
        <!--            android:layout_height="24dp"-->
        <!--            android:text="已公开"-->
        <!--            android:textColor="#ff000000"-->
        <!--            android:textSize="12sp" />-->
    </FrameLayout>

    <TextView
        android:id="@+id/diy_right_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="棒球衫"
        android:textColor="#ff000000"
        android:textSize="12sp" />

</LinearLayout>