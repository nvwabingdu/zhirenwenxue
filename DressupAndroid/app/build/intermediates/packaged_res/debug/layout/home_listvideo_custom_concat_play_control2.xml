<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.dreamfruits.yaoguo.module.main.home.InterceptTouchRelativeLayout
        android:id="@+id/video_open_layout"
        android:layout_marginBottom="83.1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:id="@+id/video_bottom_part_1"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/video_pure_mode_top_part"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="14dp"
                    android:id="@+id/video_dress_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <LinearLayout
                    android:layout_marginLeft="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/video_list_icon"
                        android:layout_width="36dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true" />

                    <TextView
                        android:id="@+id/video_list_username"
                        android:layout_width="133dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="吃了范冰冰要拉稀的穿吃了范冰冰要拉稀的穿吃了范冰冰要拉稀的穿"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/video_care_layout"
                        android:layout_width="58dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/video_care"
                        android:gravity="center"
                        android:orientation="horizontal">

<!--                        <ImageView-->
<!--                            android:layout_width="9dp"-->
<!--                            android:layout_height="9dp"-->
<!--                            android:layout_alignParentRight="true"-->
<!--                            android:background="@drawable/home_list_video_plus_black" />-->

<!--                        <TextView-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_marginLeft="7dp"-->
<!--                            android:text="关注"-->
<!--                            android:textColor="#000000"-->
<!--                            android:textSize="17sp"-->
<!--                            android:textStyle="bold" />-->


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"/>
                <TextView
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:id="@+id/title"
                    android:layout_marginBottom="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
                <RelativeLayout
                    android:id="@+id/video_rich_1"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <cn.dreamfruits.yaoguo.module.main.home.zrrichtext.ExpandableTextView
                        android:id="@+id/video_rich_content"
                        android:layout_marginRight="78dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/video_pure_mode_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="16dp"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/video_rich_2"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <cn.dreamfruits.yaoguo.module.main.home.zrrichtext.ExpandableTextView
                    android:id="@+id/video_rich_content2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_marginTop="13dp"
                    android:id="@+id/video_address_layout"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/address"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:id="@+id/video_address_tv"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="1dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="光明南街18号裕龙…"
                        android:textColor="#ffffffff"
                        android:textSize="12sp"
                        />
                </LinearLayout>

                <RelativeLayout
                    android:layout_marginTop="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/video_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09-28"
                        android:textColor="#ffe6e6e6"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/video_rich_close_tv"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收起"
                        android:textColor="#ffb3b3b3"
                        android:textSize="14sp"
                        />
                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>
    </cn.dreamfruits.yaoguo.module.main.home.InterceptTouchRelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp">
        <ImageView
            android:id="@+id/video_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/video_icon_back_white" />
        <ImageView
            android:id="@+id/video_share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/video_bottom_1"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="83dp">
        <RelativeLayout
            android:layout_marginTop="0.1dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginRight="146dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/laud_pic"
                        android:layout_width="@dimen/laud_collect_comment"
                        android:layout_height="@dimen/laud_collect_comment" />
                    <TextView
                        android:id="@+id/laud_tv"
                        android:layout_marginTop="4dp"
                        android:text="0"
                        android:textColor="#fff"
                        android:textSize="@dimen/laud_collect_comment_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/collect_pic"
                        android:layout_width="@dimen/laud_collect_comment"
                        android:layout_height="@dimen/laud_collect_comment"/>
                    <TextView
                        android:id="@+id/collect_tv"
                        android:layout_marginTop="4dp"
                        android:text="0"
                        android:textColor="#fff"
                        android:textSize="@dimen/laud_collect_comment_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/comment_pic"
                        android:src="@drawable/hp_icon_review"
                        android:layout_width="@dimen/laud_collect_comment"
                        android:layout_height="@dimen/laud_collect_comment"/>
                    <TextView
                        android:id="@+id/comment_tv"
                        android:layout_marginTop="4dp"
                        android:text="0"
                        android:textColor="#fff"
                        android:textSize="@dimen/laud_collect_comment_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/dress_pic"
                        android:src="@drawable/home_dress_white"
                        android:layout_width="@dimen/laud_collect_comment"
                        android:layout_height="@dimen/laud_collect_comment"/>
                    <TextView
                        android:id="@+id/dress_tv"
                        android:layout_marginTop="4dp"
                        android:text="0"
                        android:textColor="#fff"
                        android:textSize="@dimen/laud_collect_comment_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:id="@+id/comment_edit_layout"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_f4f4f4_corners_33dp"
                android:gravity="center_vertical"
                android:layout_width="110dp"
                android:layout_height="38dp">

                <ImageView
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/edit"
                    android:layout_width="14dp"
                    android:layout_height="14dp"/>

                <TextView
                    android:layout_marginLeft="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="来说点什么..."
                    android:textColor="#5F5F5F"
                    android:textSize="14sp"
                    />
            </LinearLayout>


            <TextView
                android:id="@+id/dress_try"
                android:layout_width="100dp"
                android:layout_height="38dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="15dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="一键试穿"
                android:textColor="#000000"
                android:textSize="14sp" />

        </RelativeLayout>

    </RelativeLayout>

<!-- 缩略图相关-->
<!--    android:background="@drawable/player_mask_bottom"-->
    <LinearLayout
        android:layout_marginBottom="76dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <!--缩略图-->
        <ImageView
            android:visibility="invisible"
            android:id="@+id/thumbnail_image_view"
            android:layout_width="135dp"
            android:layout_height="135dp" />
        <!--时间-->
        <LinearLayout
            android:visibility="invisible"
            android:id="@+id/time_layout"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_curr_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03:40"
                android:textColor="#ffffffff"
                android:textSize="18sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:textColor="#88ffffff"
                android:textSize="18sp"
                />


            <TextView
                android:id="@+id/tv_total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05:00"
                android:textColor="#88ffffff"
                android:textSize="18sp"
                />

        </LinearLayout>
        <!--进度条外部用于触摸-->
    <LinearLayout
        android:layout_marginTop="20dp"
        android:paddingTop="5dp"
        android:id="@+id/ll_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--进度条-->
        <SeekBar
            android:visibility="gone"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="14dp"
            android:id="@+id/video_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:max="1000"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:paddingEnd="0dp"
            android:paddingStart="0dp"
            android:progressDrawable="@drawable/seek_progress"
            android:thumb="@drawable/seek_thumb"
            android:thumbOffset="0dp" />
    </LinearLayout>
        <!--加载条-->
            <ProgressBar
                android:id="@+id/pb_bottom_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="@null"
                android:max="1000"
                android:progressDrawable="@drawable/progress_bar_style"
                android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>