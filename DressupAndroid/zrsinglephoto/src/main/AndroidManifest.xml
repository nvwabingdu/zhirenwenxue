            <!--这里的需要加入到unity的进程  所以修改为unity的进程-->
        <activity
            android:process=":UnityActivity"
            android:name=".easyphotos.ui.EasyPhotosActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/EasyPhotosTheme" />
        <activity
            android:process=":UnityActivity"
            android:name=".easyphotos.ui.PreviewActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/EasyPhotosFullscreenTheme" />
        <activity
            android:process=":UnityActivity"
            android:name=".easyphotos.ui.PuzzleActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/EasyPhotosTheme"
