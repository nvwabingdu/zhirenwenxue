<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black_081116"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!--    <androidx.camera.view.PreviewView-->
<!--        android:id="@+id/preview"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent" />-->

    <com.otaliastudios.cameraview.CameraView
        android:id="@+id/camera_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cameraEngine="camera2"
        app:cameraPictureFormat="jpeg"
        app:cameraPlaySounds="false"
        app:cameraExperimental="true"/>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentTop="true">
            
            <ImageView
                android:id="@+id/ic_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9dp"
                android:background="@drawable/ic_fork"/>

            <ImageView
                android:id="@+id/ratio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_ratio_1_1" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/toggle_camera_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="7dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ic_toggle_camera"/>
            <TextView
                android:id="@+id/switch_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_gravity="center_horizontal"
                android:textColor="#FFFFFF"
                android:text="翻转"/>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/bottom_start"
            android:layout_above="@id/bottom_start"
            android:layout_alignRight="@id/bottom_start"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            android:gravity="center"
            android:textColor="@color/color_white"
            tools:text="1:25/05:00"
            android:textSize="12sp" />


        <cn.dreamfruits.selector.view.CircularProgressView
            android:id="@+id/bottom_start"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/ic_green_circle"
            app:backWidth="4dp"
            app:progFirstColor="#E8FF55"
            app:progStartColor="#8BD85F" />

    </RelativeLayout>
</FrameLayout>